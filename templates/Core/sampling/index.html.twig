{% extends 'index.html.twig' %}

{# SAMPLING #}

{# initialize the array of linked entities ([entity1, entity2 ...]) to which we wish to make a link-shortcuts
1) The table of results should include a collumn of the type: <th data-column-id = "linkEntity" data-formatter = "linkEntity" data-sortable = "false"> Col. </ Th>
2) the controller will have to return in the table rows the colloids of the type: "linkEntity1" => "patern1", "linkeEntity2" => "patern2" ... #}
{% set links = ['internal_lot', 'external_lot', 'external_sequence'] %}

	{% block action %}
	{{ parent() }}
		{% if is_granted('ROLE_PROJECT') %}
			<a href="{{ path(route_importfiles) }}" class="btn btn-light border btn-sm" role="button"> <i class="fas fa-upload"></i>
			{{ ['button.Import', entityname|capitalize]|join|trans }}
		</a>
	{% else %}
		<a href="#" class="btn btn-secondary btn-sm disabled" role="button">
			<i class="fas fa-upload"></i>
			{{ ['button.Import', entityname|capitalize]|join|trans }}
		</a>
	{% endif %}
{% endblock %}

{% block body %}
	{# definition of collones to display
											    RQ! for sortable collones, suffix the field names with the names of tables tableName.fieldName #}
	<div class="table-responsive">
		<table id="grid-basic" class="table table-condensed table-hover table-striped">
			<thead>
				<tr>
					<th data-column-id="sampling.id" data-type="numeric" data-visible="false">
						Id
					</th>
					<th data-column-id="sampling.codeCollecte" data-sortable="true">
						{{ 'Code collecte'|trans }}
					</th>
					<th data-column-id="sampling.status">
					</th>
					<th data-column-id="site.codeStation" data-sortable="true">
						{{ 'Code station'|trans }}
					</th>
					<th data-column-id="sampling.dateCollecte" data-type="date">
						{{ 'Date collecte'|trans }}
					</th>
					<th data-column-id="listeTaxonsCibler" data-sortable="false">
						{{ 'list.Liste taxons'|trans }}
					</th>
					<th data-column-id="sampling.legVocFk">
						{{ 'Leg voc fk'|trans }}
					</th>
					<th
						data-column-id="country.nomPays"
						data-sortable=""
						true" data-visible="
						false">
						{{ 'Nom pays'|trans }}
					</th>
					<th
						data-column-id="municipality.codeCommune"
						data-sortable="true"
						data-visible="false">
						{{ 'Code commune'|trans }}
					</th>
					<th data-column-id="sampling.dateMaj" data-width="100" data-visible="false">
						{{ 'list.Date maj'|trans }}
					</th>
					<th data-column-id="sampling.dateCre" data-width="100" data-visible="false">
						{{ 'list.Date cre'|trans }}
					</th>
					<th data-column-id="sampling.userCre" data-width="10" data-visible="false">
						{{ 'list.User cre'|trans }}
					</th>
					<th data-column-id="sampling.userMaj" data-width="10" data-visible="false">
						{{ 'list.User maj'|trans }}
					</th>
					<th
						data-column-id="show"
						data-formatter="show"
						data-sortable="false"
						data-width="20">
						{{ 'list.show'|trans }}
					</th>
					<th
						data-column-id="edit"
						data-formatter="edit"
						data-sortable="false"
						data-width="20">
						{{ 'list.edit'|trans }}
					</th>
					<th
						data-column-id="delete"
						data-formatter="delete"
						data-sortable="false"
						data-width="20">
						{{ 'list.delete'|trans }}
					</th>
					<th
						data-column-id="linkInternalLot"
						data-formatter="linkInternalLot"
						data-sortable="false"
						data-width="20">
						{{ 'list.linkInternalLot'|trans }}
					</th>
					<th
						data-column-id="linkExternalLot"
						data-formatter="linkExternalLot"
						data-sortable="false"
						data-width="20">
						{{ 'list.linkExternalLot'|trans }}
					</th>
					<th
						data-column-id="linkExternalSequence"
						data-formatter="linkExternalSequence"
						data-sortable="false"
						data-width="20">
						{{ 'list.linkExternalSequence'|trans }}
					</th>
				</tr>
			</thead>
		</table>
	</div>
{% endblock %}
