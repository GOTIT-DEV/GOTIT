{% extends 'index.html.twig' %}

{# INDEX : CHROMATOGRAM #}

{# initialize the array of linked entities ([entity1, entity2 ...]) to which we wish to make a link-shortcuts
1) The table of results should include a collumn of the type: <th data-column-id = "linkEntity" data-formatter = "linkEntity" data-sortable = "false"> Col. </ Th>
2) the controller will have to return in the table rows the colloids of the type: "linkEntity1" => "patern1", "linkeEntity2" => "patern2" ... #}
{% set links = ['sequenceassemblee'] %}

	{% block action %}
	{{ parent() }}
		{% if is_granted('ROLE_COLLABORATION') %}
			<a href="{{ path(route_importfiles) }}" class="btn btn-light border btn-sm" role="button"> <i class="fas fa-upload"></i>
			{{ ['button.Import', entityname|capitalize]|join|trans }}
		</a>
	{% else %}
		<a href="#" class="btn btn-secondary btn-sm disabled" role="button">
			<i class="fas fa-upload"></i>
			{{ ['button.Import', entityname|capitalize]|join|trans }}
		</a>
	{% endif %}
{% endblock %}

{% block body %}
	{# definition of collones to display
							    RQ! for sortable columns, suffix the field names with the names of tables tableName.fieldName #}
	<div class="table-responsive">
		<table id="grid-basic" class="table table-condensed table-hover table-striped">
			<thead>
				<tr>
					<th data-column-id="chromato.id" data-type="numeric" data-visible="false">
						Id
					</th>
					<th data-column-id="specimen.codeIndBiomol" data-sortable="true">
						{{ 'Code ind biomol'|trans }}
					</th>
					<th data-column-id="dna.codeAdn" data-sortable="true" data-visible="true">
						{{ 'Code adn'|trans }}
					</th>
					<th
						data-column-id="chromato.codeChromato"
						data-sortable="true"
						data-visible="true">
						{{ 'Code chromato'|trans }}
					</th>
					<th data-column-id="gene" data-sortable="true">
						{{ 'Gene voc fk'|trans }}
					</th>
					<th data-column-id="pcr.codePcr" data-sortable="true" data-visible="false">
						{{ 'Code pcr'|trans }}
					</th>
					<th data-column-id="pcr.numPcr" data-sortable="true" data-visible="false">
						{{ 'Num pcr'|trans }}
					</th>
					<th data-column-id="quality" data-sortable="true" data-visible="true">
						{{ 'Qualite chromato voc fk'|trans }}
					</th>
					<th
						data-column-id="last_seq.codeSqcAss"
						data-sortable="true"
						data-visible="false">
						{{ 'list.lastCodeSeqAss'|trans }}
					</th>
					<th data-column-id="last_seq_status" data-sortable="true" data-visible="false">
						{{ 'list.lastStatutSeqAss'|trans }}
					</th>
					<th
						data-column-id="last_seq.codeSqcAlignement"
						data-sortable="true"
						data-visible="true">
						{{ 'list.lastCodeSeqAlignement'|trans }}
					</th>
					<th
						data-column-id="last_seq.dateCreationSqcAss"
						data-sortable="true"
						data-visible="false">
						{{ 'list.lastDateSeqAss'|trans }}
					</th>
					<th data-column-id="chromato.dateMaj" data-width="100">
						{{ 'list.Date maj'|trans }}
					</th>
					<th data-column-id="chromato.dateCre" data-width="100" data-visible="false">
						{{ 'list.Date cre'|trans }}
					</th>
					<th
						data-column-id="user_cre.user_full_name"
						data-width="10"
						data-visible="false"
						data-sortable="false">
						{{ 'list.User cre'|trans }}
					</th>
					<th
						data-column-id="user_maj.user_full_name"
						data-width="10"
						data-visible="false"
						data-sortable="false">
						{{ 'list.User maj'|trans }}
					</th>
					<th
						data-column-id="show"
						data-formatter="show"
						data-sortable="false"
						data-width="20">
						{{ 'list.show'|trans }}
					</th>
					<th
						data-column-id="edit"
						data-formatter="edit"
						data-sortable="false"
						data-width="20">
						{{ 'list.edit'|trans }}
					</th>
					<th
						data-column-id="delete"
						data-formatter="delete"
						data-sortable="false"
						data-width="20">
						{{ 'list.delete'|trans }}
					</th>
					<th
						data-column-id="linkSequenceassemblee"
						data-formatter="linkSequenceassemblee"
						data-sortable="false"
						data-width="20">
						{{ 'list.linkSequenceassemblee'|trans }}
					</th>
					{# <th data-column-id="linkEstaligneettraite" data-formatter="linkEstaligneettraite" data-sortable="false" data-width="20">SA(s)</th> #}
				</tr>
			</thead>
		</table>
	</div>
{% endblock %}
