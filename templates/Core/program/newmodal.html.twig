{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
	<!-- <h1>Modal</h1> -->

	{% set dateNow = "now"|date('Y-m-d H:i:s',timezone="Europe/Paris")  %}

	{{ form_start(form, {'action': path('program_newmodal')}) }}
	{% if form.dateCre %}
		{{ form_widget(form.dateCre, {'value' : dateNow ,'attr': {'style': 'display:none '} }) }}
	{% endif %}
	{% if form.dateMaj %}
		{{ form_widget(form.dateMaj, {'attr': {'style': 'display:none '} }) }}
	{% endif %}
	{{ form_rest(form) }}
	<div class="form-group">
		<div class="col-sm-2"></div>
		<div class="col-sm-10">
			<button type="submit" class="btn btn-success" value="Create">Valider</button>
		</div>
	</div>
	{{ form_end(form) }}


{% endblock %}
