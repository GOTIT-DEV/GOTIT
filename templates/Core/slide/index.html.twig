{% extends 'index.html.twig' %}

{# INDEX : SLIDE OF SPECIMEN #}

{# initialize the array of linked entities ([entity1, entity2 ...]) to which we wish to make a link-shortcuts
1) The table of results should include a collumn of the type: <th data-column-id = "linkEntity" data-formatter = "linkEntity" data-sortable = "false"> Col. </ Th>
2) the controller will have to return in the table rows the colloids of the type: "linkEntity1" => "patern1", "linkeEntity2" => "patern2" ... #}
{% set links =  [] %}

	{% block action %}
	{{ parent() }}
		{% if is_granted('ROLE_PROJECT') %}

			<a href="{{ path( route_importfiles ) }}" class="btn btn-light border btn-sm" role="button"> <i class="fas fa-upload"></i>
			{{['button.Import',entityname|capitalize]|join|trans}}
		</a>
	{% else %}
		<a href="#" class="btn btn-secondary btn-sm disabled" role="button">
			<i class="fas fa-upload"></i>
			{{['button.Import',entityname|capitalize]|join|trans}}
		</a>
	{% endif %}
{% endblock %}

{% block body %}
	{# definition of collones to display 
								    RQ! for sortable collones, suffix the field names with the names of tables tableName.fieldName #}
	<div class="table-responsive">
		<table id="grid-basic" class="table table-condensed table-hover table-striped">
			<thead>
				<tr>
					<th data-column-id="ss.id" data-type="numeric" data-visible="false">
						Id
					</th>
					<th
						data-column-id="lot.internal_biological_material_code"
						data-sortable="true">
						{{'Code lot materiel'|trans}}
					</th>
					<th data-column-id="sp.specimen_morphological_code" data-sortable="true">
						{{'Code ind tri morpho'|trans}}
					</th>
					<th
						data-column-id="ss.collection_slide_code"
						data-sortable="true"
						data-visible="true">
						{{'Code lame coll'|trans}}
					</th>
					<th data-column-id="ss.slide_date" data-type="date" data-sortable="true">
						{{'Date lame'|trans}}
					</th>
					<th data-column-id="sp.tube_code" data-sortable="true">
						{{'Code tube'|trans}}
					</th>
					<th
						data-column-id="voc_sp_specimen_type.code"
						data-sortable="true"
						data-visible="false">
						{{'Type individu voc fk'|trans}}
					</th>
					<th
						data-column-id="sp.specimen_molecular_code"
						data-sortable="true"
						data-visible="false">
						{{'Code ind biomol'|trans}}
					</th>
					<th data-column-id="last_taxname_sp" data-sortable="true" data-visible="false">
						{{'list.Last taxname'|trans}}
					</th>
					<th
						data-column-id="ss.photo_folder_name"
						data-sortable="true"
						data-visible="false">
						{{'Nom dossier photos'|trans}}
					</th>
					<th data-column-id="box.box_code" data-sortable="true" data-visible="false">
						{{'Code boite'|trans}}
					</th>
					<th data-column-id="ss.date_of_update" data-width="100">
						{{'list.Date maj'|trans}}
					</th>
					<th data-column-id="ss.date_of_creation" data-width="100" data-visible="false">
						{{'list.Date cre'|trans}}
					</th>
					<th data-column-id="user_cre.user_full_name" data-width="10" data-visible="false">
						{{'list.User cre'|trans}}
					</th>
					<th data-column-id="user_maj.user_full_name" data-width="10" data-visible="false">
						{{'list.User maj'|trans}}
					</th>
					<th
						data-column-id="show"
						data-formatter="show"
						data-sortable="false"
						data-width="20">
						{{'list.show'|trans}}
					</th>
					<th
						data-column-id="edit"
						data-formatter="edit"
						data-sortable="false"
						data-width="20">
						{{'list.edit'|trans}}
					</th>
					<th
						data-column-id="delete"
						data-formatter="delete"
						data-sortable="false"
						data-width="20">
						{{'list.delete'|trans}}
					</th>
				</tr>
			</thead>
		</table>
	</div>
{% endblock %}
