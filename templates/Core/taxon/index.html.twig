{% extends 'index.html.twig' %}

{#  INDEX : TAXON #}

{# initialize the array of linked entities ([entity1, entity2 ...]) to which we wish to make a link-shortcuts
1) The table of results should include a collumn of the type: <th data-column-id = "linkEntity" data-formatter = "linkEntity" data-sortable = "false"> Col. </ Th>
2) the controller will have to return in the table rows the colloids of the type: "linkEntity1" => "patern1", "linkeEntity2" => "patern2" ... #}
{% set links =  [] %}

	{% block action %}
	{{ parent() }}
		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path( route_importfiles ) }}" class="btn btn-light border btn-sm" role="button"> <i class="fas fa-upload"></i>
			{{['button.Import',entityname|capitalize]|join|trans}}
		</a>
	{% else %}
		<a href="#" class="btn btn-secondary btn-sm disabled" role="button">
			<i class="fas fa-upload"></i>
			{{['button.Import',entityname|capitalize]|join|trans}}
		</a>
	{% endif %}
{% endblock %}

{% block body %}
	{# definition of collones to display
											     ! for sortable collones, suffix the field names with the names of tables tableName.fieldName #}
	<div class="table-responsive">
		<table id="grid-basic" class="table table-condensed table-hover table-striped">
			<thead>
				<tr>
					<th data-column-id="taxon.id" data-type="numeric" data-visible="false">Id</th>
					<th data-column-id="taxon.taxname" data-sortable="true">{{'Taxname'|trans}}</th>
					<th data-column-id="taxon.rank" data-sortable="true">{{'Rank'|trans}}</th>
					<th data-column-id="taxon.family" data-sortable="true">{{'Family'|trans}}</th>
					<th data-column-id="taxon.validity" data-sortable="true">{{'Validity'|trans}}</th>
					<th data-column-id="taxon.code" data-sortable="true">{{'Code taxon'|trans}}</th>
					<th data-column-id="taxon.clade" data-sortable="true">{{'Clade'|trans}}</th>
					<th data-column-id="taxon.metaUpdateDate" data-width="100">{{'list.Meta update date'|trans}}</th>
					<th
						data-column-id="taxon.metaCreationDate"
						data-width="100"
						data-visible="false">{{'list.Meta creation date'|trans}}</th>
					<th
						data-column-id="taxon.metaCreationUser"
						data-width="10"
						data-visible="false">{{'list.Meta creation user'|trans}}</th>
					<th data-column-id="taxon.metaUpdateUser" data-width="10" data-visible="false">{{'list.Meta update user'|trans}}</th>
					<th
						data-column-id="show"
						data-formatter="show"
						data-sortable="false"
						data-width="20">{{'list.show'|trans}}</th>
					<th
						data-column-id="edit"
						data-formatter="edit"
						data-sortable="false"
						data-width="20">{{'list.edit'|trans}}</th>
					<th
						data-column-id="delete"
						data-formatter="delete"
						data-sortable="false"
						data-width="20">{{'list.delete'|trans}}</th>
				</tr>
			</thead>
		</table>
	</div>
{% endblock %}
