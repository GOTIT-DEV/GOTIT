{% extends 'importfilecsv.html.twig' %}

{# return the name of the route in the url #}
{% set route_index = app.request.attributes.get('_route') %}
{% set route_url = route_index|split('_')[0] %}

{% block body %}

	<div class="page-title">
		<div class="title_left">
			<h3>{{'Import Files CSV'|trans}}
			</h3>
		</div>
		<div class="title_right"></div>
	</div>

	<div class="clearfix"></div>


	<div class="clearfix"></div>

	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">

			<div class="x_panel">

				<div class="x_content">
					<br/>
					<div class="form-group">
						<label class="col-md-3 col-sm-3 col-xs-12 col-form-label">
							{{'importfiles.form'|trans({},'help')|nl2br}}
						</label>
						{{ form_start(form , { 'attr': {'class': 'form-horizontal form-label-left'} }) }}
						{{ form_errors(form) }}
						<div class="form-group">

							{% if (form.dataset is defined) %}
								<div class="col-md-6 col-sm-6 col-xs-12 ">
									{{ form_widget(form.dataset, { 'attr': {'class': 'form-control'} }) }}
								</div>
							{% endif %}

							{% if (form.type_csv is defined) %}
								<div class="col-md-6 col-sm-6 col-xs-12 ">
									{{ form_widget(form.type_csv, { 'attr': {'class': 'form-control'} }) }}
								</div>
							{% endif %}

							<div class="col-md-6 col-sm-6 col-xs-12 ">
								&nbsp;
							</div>

							{% if (form.fichier_motu is defined) %}
								<div class="col-md-6 col-sm-6 col-xs-12 ">
									{{ form_widget(form.fichier_motu) }}
								</div>
							{% endif %}
							{% if (form.fichier is defined) %}
								<div class="col-md-6 col-sm-6 col-xs-12 ">
									{{ form_widget(form.fichier) }}
								</div>
							{% endif %}
							<div class="col-md-6 col-sm-6 col-xs-12 ">
								&nbsp;
							</div>
							<div class="col-md-6 col-sm-6 col-xs-12 ">
								{{ form_widget( form.envoyer , { 'attr': {'class': 'btn btn-success'} }) }}
							</div>
						</div>


						<div>
							{% if message is not empty %}
								<hr/> {{message|raw}}
								{% else %}
							{% endif %}
						</div>
						{{ form_end(form) }}
					</div>

				</div>
			</div>

		</div>
	</div>

{% endblock %}
