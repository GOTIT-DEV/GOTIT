{% extends 'index.html.twig' %}

{# INDEX : MOTU #}

{% set links =  [] %}

{% block action %}

	<a href="{{ path(route_index) }}" class="btn btn-primary btn-sm" role="button">
		<i class="fas fa-list"></i>
		{{'button.showAllRecord'|trans}}
	</a>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path( route_new ) }}?nameFk={{varUrl_nameFk}}&idFk={{varUrl_idFk}}" class="btn btn-success btn-sm" role="button">
			<i class="fa fa-plus"></i>
			{{['button.New',entityname|capitalize]|join|trans}}
		</a>
	{% else %}
		<a href="#" class="btn btn-secondary btn-sm disabled" role="button">
			<i class="fa fa-plus"></i>
			{{['button.New',entityname|capitalize]|join|trans}}
		</a>
	{% endif %}
	{% if is_granted('ROLE_COLLABORATION') %}
		<button class="btn btn-primary btn-sm" id="export" data-export="export" data-toggle="tooltip" data-align="right" title="{{'button.exportToCSV-title'|trans}}">
			{{'button.exportToCSV'|trans}}</button>
	{% endif %}
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path( route_importfiles ) }}" class="btn btn-light border btn-sm" role="button">
			<i class="fas fa-upload"></i>
			{{['button.Import',entityname|capitalize]|join|trans}}</a>
	{% else %}
		<i class="fas fa-upload"></i>
		<a href="#" class="btn btn-secondary btn-sm disabled" role="button">
			{{['button.Import',entityname|capitalize]|join|trans}}</a>
	{% endif %}
{% endblock %}

{% block body %}
	<div class="table-responsive">
		<table id="grid-basic" class="table table-condensed table-hover table-striped">
			<thead>
				<tr>
					<th data-column-id="motu_dataset.id" data-type="numeric" data-visible="false">
						Id
					</th>
					<th data-column-id="motu_dataset.title" data-visible="true">
						{{'Title'|trans}}
					</th>
					<th data-column-id="motu_dataset.filename" data-visible="true">
						{{'CSV Filename'|trans}}
					</th>
					<th
						data-column-id="motu_dataset.date"
						data-sortable="true"
						data-visible="true">
						{{'Date motu'|trans}}
					</th>
					<th
						data-column-id="motu_dataset.comment"
						data-sortable="true"
						data-visible="true">{{'Commentaire motu'|trans}}
					</th>
					<th data-column-id="listePerson" data-sortable="false" data-visible="true">
						{{'list.Liste personnes'|trans}}
					</th>
					<th data-column-id="motu_dataset.metaUpdateDate" data-width="100">
						{{'list.Meta update date'|trans}}
					</th>
					<th
						data-column-id="motu_dataset.metaCreationDate"
						data-width="100"
						data-visible="false">
						{{'list.Meta creation date'|trans}}
					</th>
					<th
						data-column-id="motu_dataset.metaCreationUser"
						data-width="10"
						data-visible="false">
						{{'list.Meta creation user'|trans}}
					</th>
					<th
						data-column-id="motu_dataset.metaUpdateUser"
						data-width="10"
						data-visible="false">
						{{'list.Meta update user'|trans}}
					</th>
					<th
						data-column-id="show"
						data-formatter="show"
						data-sortable="false"
						data-width="20">
						{{'list.show'|trans}}
					</th>
					<th
						data-column-id="edit"
						data-formatter="edit"
						data-sortable="false"
						data-width="20">
						{{'list.edit'|trans}}
					</th>
					<th
						data-column-id="delete"
						data-formatter="delete"
						data-sortable="false"
						data-width="20">
						{{'list.delete'|trans}}
					</th>
				</tr>
			</thead>
		</table>
	</div>
{% endblock %}
