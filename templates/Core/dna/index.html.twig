{% extends 'index.html.twig' %}

{# INDEX : DNA #}

{# initialize the array of linked entities ([entity1, entity2 ...]) to which we wish to make a link-shortcuts
1) The table of results should include a collumn of the type: <th data-column-id = "linkEntity" data-formatter = "linkEntity" data-sortable = "false"> Col. </ Th>
2) the controller will have to return in the table rows the colloids of the type: "linkEntity1" => "patern1", "linkeEntity2" => "patern2" ... #}
{% set links =  ['pcr'] %}

	{% block action %}
	{{ parent() }}
		{% if is_granted('ROLE_COLLABORATION') %}
			<a href="{{ path( route_importfiles ) }}" class="btn btn-light border btn-sm" role="button"> <i class="fas fa-upload"></i>
			{{['button.Import',entityname|capitalize]|join|trans}}
		</a>
	{% else %}
		<a href="#" class="btn btn-secondary btn-sm disabled" role="button">
			<i class="fas fa-upload"></i>
			{{['button.Import',entityname|capitalize]|join|trans}}
		</a>
	{% endif %}
{% endblock %}

{% block body %}
	{# definition of columns to display 
					RQ! for sortable columns, suffix the field names with the names of tables tableName.fieldName #}

	<div class="table-responsive">
		<div class="table-responsive">
			<div class="table-responsive">
				<table id="grid-basic" class="table table-condensed table-hover table-striped">
					<thead>
						<tr>
							<th data-column-id="adn.id" data-type="numeric" data-visible="false">
								Id
							</th>
							<th data-column-id="adn.codeAdn" data-sortable="true">
								{{'Code adn'|trans}}
							</th>
							<th data-column-id="individu.codeIndBiomol" data-sortable="true">
								{{'Code ind biomol'|trans}}
							</th>
							<th data-column-id="adn.dateAdn" data-type="date">
								{{'Date adn'|trans}}
							</th>
							<th data-column-id="listePersonne" data-sortable="false" data-visible="true">
								{{'list.Liste personnes'|trans}}
							</th>
							<th data-column-id="boite.codeBoite" data-visible="true">
								{{'Code boite'|trans}}
							</th>
							<th data-column-id="adn.dateMaj" data-width="100" data-visible="false">
								{{'list.Date maj'|trans}}
							</th>
							<th data-column-id="adn.dateCre" data-width="100" data-visible="true">
								{{'list.Date cre'|trans}}
							</th>
							<th data-column-id="adn.userCre" data-width="10" data-visible="false">
								{{'list.User cre'|trans}}
							</th>
							<th data-column-id="adn.userMaj" data-width="10" data-visible="false">
								{{'list.User maj'|trans}}
							</th>
							<th
								data-column-id="show"
								data-formatter="show"
								data-sortable="false"
								data-width="20">
								{{'list.show'|trans}}
							</th>
							<th
								data-column-id="edit"
								data-formatter="edit"
								data-sortable="false"
								data-width="20">
								{{'list.edit'|trans}}
							</th>
							<th
								data-column-id="delete"
								data-formatter="delete"
								data-sortable="false"
								data-width="20">
								{{'list.delete'|trans}}
							</th>
							<th
								data-column-id="linkPcr"
								data-formatter="linkPcr"
								data-sortable="false"
								data-width="20">
								{{'list.linkPcr'|trans}}
							</th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
