{# CO1 sampling extra templates #}

{# verbatim mode escapes {{braces}} for mustache.js#}
{% verbatim %}
  <template id="details-form-template">
    <form class='details-form'>
      <input type='hidden' name='taxon' value="{{ id }}"/>
      <input type='hidden' name='lmp_lm' value="{{ lmp }}"/>
      <input type='hidden' name='lmp_co1' value="{{ lmp_co1 }}"/>
      <button
        type='submit'
        class='btn btn-sm btn-light border command-details'
        data-row-id="{{ id }}">
        <span class='fas fa-map-marker'></span>
      </button>
    </form>
  </template>


  <template id="download-form-template">
    <form class="download-details">
    <input type="hidden" name="taxon" value="{{ id }}"/>
    <button
      type="submit"
      class="btn btn-sm btn-light border command-details"
      data-row-id="{{ id }}">
      <span class="fas fa-download"></span>
    </button>
  </template>
{% endverbatim %}



