{% extends 'base.html.twig' %}

{# LOGIN #}

{% block leftnav %}
	{% embed "nav.html.twig" %}
		{% block sidebar %}{% endblock %}
	{% endembed %}
{% endblock %}


{% block topnav %}{% endblock %}

{% block titlepage %}
	<h1>Gene, Occurence and Taxa in Integrative Taxonomy</h1>
{% endblock %}


{% block body %}

	<div id="login-images">
		<div class="x_panel">
			<div class="x_content media-middle">
				<img src="{{ asset('build/images/carte_stations_e3s.jpg') }}" height="200" alt="sequence adn" align="center"/>
			</div>
		</div>
		<div class="x_panel">
			<div class="x_content">
				<img src="{{ asset('build/images/prosaelus_valdensis.jpg') }}" height="200" alt="prosaelus valdensis" align="center"/>
			</div>
		</div>
	</div>

	{# <div class="col-md-12 col-sm-12 col-xs-12"> #}
	<div class="x_panel">
		<div class="x_content">

			<form id="login-form" class="form-horizontal form-label-left" action="{{ path('login') }}" method="post">

				<p>
					{% if error %}
						<div>
							{{ error.messageKey}}
							/
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}
					<b>
						Please enter your login / password
					</b>
				</p>
				<span class="section"></span>

				<div class="item form-group">
					<label class="control-label col-sm-3 col-xs-12" for="username">Username
					</label>
					<div class="col-md-6 col-sm-6 col-xs-12">
						<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control col-md-7 col-xs-12" placeholder="fmallard2018" required="required"/>
					</div>
				</div>
				<div class="item form-group">
					<label for="password" class="control-label col-sm-3 col-xs-12">Password</label>
					<div class="col-md-6 col-sm-6 col-xs-12">
						<input type="password" id="password" name="_password" class="form-control col-md-7 col-xs-12" required="required"/>
					</div>
				</div>
				{# If you want to control the URL the user is redirected to on success (more details below) #}
				<input type="hidden" name="_target_path" value="/{{app.request.getDefaultLocale()}}"/>
				<div class="form-group">
					<div class="col-md-6 col-md-offset-3">
						<button id="send" type="submit" class="btn btn-success">Login</button>
					</div>
				</div>
			</form>
		</div>
	</div>

	<!-- footer content -->
	<div class="x_panel">
		<div id="login-footer" class="x_content">
			<img id="lehna-logo" src="{{ asset('build/images/logo-LEHNA.png') }}" width="75" height="75" alt="LEHNA"/>
			<span id="lehna-desc" class="umr-desc">LEHNA : UMR CNRS 5023 Ecologie des Hydrosystèmes Naturels et Anthropisés,<br>
				Université Lyon 1 , ENTPE, CNRS, Université Lyon</span>
			<img id="bbees-logo" src="{{ asset('build/images/logo-BBEES.png') }}" width="75" height="75" alt="Unité Bases de données sur la Biodiversité, Écologie, Environnement et Sociétés (BBEES), Muséum national d'Histoire naturelle, CNRS "/>
			<span id="bbees-desc" class="umr-desc">BBEES : Unité Bases de données sur laBiodiversité, Écologie, Environnement et Sociétés<br>
				Muséum national d'Histoire naturelle, CNRS ; CP55, 57 rue Cuvier 75005 Paris, France</span>
			<div id="login-logos">
				<img class="login-logo" src="{{ asset('build/images/logo-CNRS.png') }}" height="75" alt="CNRS"/>
				<img class="login-logo" src="{{ asset('build/images/logo-LYON1.png') }}" height="75" alt="UNIV-LYON1"/>
				<img class="login-logo" src="{{ asset('build/images/logo-MNHN.png') }}" height="75" alt="MNHN"/>
				<img class="login-logo" src="{{ asset('build/images/logosimpleCC.jpg') }}" height="75" alt="CC-IN2P3"/>
			</div>
		</div>
	</div>
	<!-- /footer content -->

{% endblock %}
